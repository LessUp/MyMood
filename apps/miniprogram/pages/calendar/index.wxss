.container {
  padding-bottom: 180rpx; /* Space for bottom bar */
}

/* Header */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  transition: opacity 0.2s;
}

.nav-btn:active {
  opacity: 0.7;
}

.nav-btn .icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.month-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.month-title text:first-child {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.month-big {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
}

/* Calendar Grid */
.calendar-card {
  padding: 24rpx 16rpx;
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 16rpx;
}

.w-day {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  grid-gap: 12rpx;
}

.day-cell {
  aspect-ratio: 1;
  border-radius: var(--radius-md);
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 8rpx;
  position: relative;
  transition: transform 0.1s;
}

.day-cell:active {
  transform: scale(0.95);
}

.day-cell.out {
  opacity: 0.3;
  background: transparent;
}

.day-cell.today {
  box-shadow: 0 0 0 2rpx var(--accent-color);
  background: #fff;
}

.day-cell.selected {
  background: rgba(0, 0, 0, 0.05);
}

.d-num {
  font-size: 26rpx;
  color: #444;
  font-weight: 500;
}

.note-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: var(--accent-color);
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.mood-emoji {
  font-size: 38rpx;
  margin-top: 4rpx;
}

/* Locked State */
.locked-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  text-align: center;
}

.locked-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.5;
  margin-bottom: 16rpx;
}

.locked-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.locked-hint {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.unlock-btn {
  min-width: 200rpx;
}

/* Floating Buttons */
.fab-today {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: none; /* Hidden in layout rework, keeping optional */
}

/* Bottom Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.bar-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
  opacity: 0.6;
}

.bar-item text {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.center-action {
  transform: translateY(-20rpx);
}

.bar-icon-lg {
  width: 96rpx;
  height: 96rpx;
  background: var(--accent-color);
  border-radius: 50%;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
  filter: invert(1); /* Make icon white */
}

/* Picker Sheet */
.mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 99;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}

.picker-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  z-index: 100;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.picker-sheet.show {
  transform: translateY(0);
}

.picker-handle {
  width: 80rpx;
  height: 8rpx;
  background: #e5e5e5;
  border-radius: 4rpx;
  margin: 0 auto 24rpx;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
}

.action-btn text {
  font-size: 26rpx;
  color: #ff4d4f;
}

.emoji-scroll {
  max-height: 500rpx;
  margin-bottom: 24rpx;
}

.emoji-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
  padding: 8rpx;
}

.emoji-item {
  aspect-ratio: 1;
  background: #f7f8fa;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  transition: transform 0.1s;
}

.emoji-hover {
  transform: scale(0.92);
  background: #ececec;
}

.block-btn {
  width: 100% !important;
}

/* Dark Mode Overrides */
.theme-dark {
  --bg-color: #121212;
  --card-bg: #1e1e1e;
  --text-main: #e0e0e0;
  --text-secondary: #888;
  --border-color: #333;
}

.theme-dark .bottom-bar {
  background: rgba(30, 30, 30, 0.95);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.theme-dark .day-cell {
  background: #2a2a2a;
}

.theme-dark .day-cell.today {
  background: #252525;
}

.theme-dark .picker-sheet {
  background: #1e1e1e;
}

.theme-dark .emoji-item {
  background: #2a2a2a;
}

.theme-dark .bar-icon {
  filter: invert(0.8);
}

.theme-dark .bar-icon-lg {
  filter: invert(0);
}
