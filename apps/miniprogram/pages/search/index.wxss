.container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.04);
}
.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.input {
  width: 100%;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: inherit;
}
.range-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.picker {
  flex: 1;
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 26rpx;
}
.range-sep {
  color: #999;
}
.emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.emoji {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: #f5f5f5;
}
.emoji.on {
  background: var(--accent-color, #07c160);
  color: #fff;
}
.row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}
.label-inline {
  font-size: 26rpx;
  color: #666;
}
.actions {
  flex-wrap: wrap;
}
.primary {
  background: var(--accent-color, #07c160);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.plain {
  background: transparent;
  color: var(--accent-color, #07c160);
  border: 2rpx solid var(--accent-color, #07c160);
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}
.locked {
  text-align: center;
  color: #888;
  font-size: 28rpx;
  padding: 36rpx 12rpx;
}
.empty {
  text-align: center;
  color: #888;
  padding: 36rpx 0;
  font-size: 26rpx;
}
.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.left .dk {
  font-size: 28rpx;
  color: #333;
}
.left .note {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}
.right {
  font-size: 36rpx;
}
.theme-dark {
  background-color: #0f0f0f;
  color: #eee;
}
.theme-dark .section {
  background: #161616;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.25);
}
.theme-dark .label {
  color: #ddd;
}
.theme-dark .input,
.theme-dark .picker {
  background: #1c1c1c;
  color: #eee;
}
.theme-dark .emoji {
  background: #1f1f1f;
  color: #ccc;
}
.theme-dark .emoji.on {
  background: var(--accent-color, #3ea76a);
  color: #fff;
}
.theme-dark .item {
  border-bottom-color: #242424;
}
.theme-dark .left .note {
  color: #aaa;
}
