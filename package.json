{
  "name": "moodflow",
  "version": "2.0.0",
  "private": true,
  "description": "MoodFlow - 心情日历，支持微信小程序和网页版",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @moodflow/web",
    "dev:api": "npm run dev -w @moodflow/api",
    "build:deps": "npm run build:types && npm run build:core",
    "build:web": "npm run build -w @moodflow/web",
    "build:api": "npm run build -w @moodflow/api",
    "build:core": "npm run build -w @moodflow/core",
    "build:types": "npm run build -w @moodflow/types",
    "build": "npm run build:types && npm run build:core && npm run build:web && npm run build:api",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "npm test --workspaces --if-present",
    "test:integration": "node tests/integration/run_tests.js",
    "postinstall": "npm run build:deps",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/dist"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
