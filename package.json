{
  "name": "moodflow",
  "version": "2.0.0",
  "private": true,
  "description": "MoodFlow - 心情日历，支持微信小程序和网页版",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @moodflow/web dev",
    "dev:api": "pnpm --filter @moodflow/api dev",
    "build:web": "pnpm --filter @moodflow/web build",
    "build:api": "pnpm --filter @moodflow/api build",
    "build:core": "pnpm --filter @moodflow/core build",
    "build:types": "pnpm --filter @moodflow/types build",
    "build": "pnpm build:types && pnpm build:core && pnpm build:web && pnpm build:api",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
